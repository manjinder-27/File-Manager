<CustomInputField>:
	size_hint_y:None
	height:'280dp'
	MDTopAppBar:
		title:root.title
		md_bg_color:1,1,1,1
		specific_text_color:0,0,0,1
		pos_hint:{'top':1}
	MDTextField:
		id:field
		mode:'rectangle'
		hint_text:root.hint
		icon_left:'folder-plus-outline'
		hint_text_color_focus:0,0,0,1
		icon_left_color_focus:0,0,0,1
		text_color_focus:0,0,0,1
		line_color_focus:0,0,0,1
		size_hint_x:.8
		pos_hint:{'center_x':.5,'center_y':.6}
	MDRaisedButton:
		text:root.btnText
		size_hint:.8,.08
		md_bg_color:0,0,1,1
		font_size:'20dp'
		markup:True
		pos_hint:{'center_x':.5,'center_y':.33}
		on_release:root.create()
	MDFlatButton:
		text:'[b]CANCEL[/b]'
		size_hint:.8,.08
		font_size:'20dp'
		md_bg_color:0,0,0,.1
		markup:True
		pos_hint:{'center_x':.5,'center_y':.15}
		on_release:root.cancel()